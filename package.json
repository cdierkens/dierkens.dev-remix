{
  "name": "remix-template",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "remix build",
    "check:lint": "eslint .",
    "check:types": "tsc",
    "deploy": "yarn pulumi up",
    "dev": "cross-env NODE_ENV=development remix dev",
    "pulumi": "pulumi --cwd infrastructure",
    "start": "cross-env NODE_ENV=production node ./server.js",
    "test:unit": "vitest",
    "test:component": "cypress run --component",
    "test:e2e": "cypress run",
    "ci:e2e": "cross-env NODE_ENV=test start-server-and-test dev http://localhost:3000 test:e2e",
    "prepare": "husky install"
  },
  "dependencies": {
    "@remix-run/express": "^1.16.1",
    "@remix-run/node": "^1.16.1",
    "@remix-run/react": "^1.16.1",
    "@remix-run/serve": "1.16.1",
    "@remix-run/server-runtime": "^1.16.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "daisyui": "2.51.6",
    "express": "^4.18.2",
    "isbot": "3.6.10",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@pulumi/docker": "^3.6.1",
    "@pulumi/gcp": "^6.56.0",
    "@pulumi/pulumi": "^3.68.0",
    "@remix-run/dev": "^1.16.1",
    "@remix-run/eslint-config": "^1.16.1",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/testing-library__jest-dom": "5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "@vitejs/plugin-react": "^3.1.0",
    "cypress": "^12.12.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.2",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "start-server-and-test": "^1.15.4",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5",
    "vite": "^4.3.8",
    "vitest": "^0.29.8"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{js,jsx}": "eslint --fix"
  }
}
